<!--miniprogram/pages/user/userpage/userpage.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">报名详情</view>
</cu-custom>

<view class="weui-item border-shadow background-2" wx:for="{{userlist}}">
	<view class="weui-flex" style="margin-top:20rpx;justify-content:space-between;">
		<view class="weui-flex__item">
			<view class="weui-item__desc1">
				<text>姓名\n{{item.name}}</text>
			</view>
		</view>

		<view class="weui-flex__item">
			<view class="weui-item__desc">
				<text>学号\n{{item.xuehao}}</text>
			</view>
		</view>
		<view class="weui-flex__item">
			<view class="weui-item__desc">
				<text>性别\n{{item.sex}}</text>
			</view>
		</view>
	</view>
	<view class="weui-flex" style="margin-top:20rpx;justify-content:space-between;">
		<view class="weui-flex__item">
			<view class="weui-item__desc1">
				<text>学院\n{{item.xueyuan}}</text>
			</view>
		</view>

		<view class="weui-flex__item">
			<view class="weui-item__desc">
				<text>QQ\n{{item.qq}}</text>
			</view>
		</view>
		<view class="weui-flex__item">
			<view class="weui-item__desc">
				<text>手机\n{{item.phone}}</text>
			</view>
		</view>
	</view>
</view>