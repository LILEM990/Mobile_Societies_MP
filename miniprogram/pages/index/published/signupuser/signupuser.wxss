.weui-item {
  margin-top: 30rpx;
  padding: 20rpx;
  color: #fff;
}

.border-shadow {
  border-radius: 15rpx;
}

.background-2 {
  background-image: linear-gradient(-45deg, #fbc2eb 0%, #a6c1ee 100%);
}

.weui-flex {
  justify-content: space-between;
  align-items: center;
}

.weui-flex__item {
  -webkit-box-flex: auto;
  -webkit-flex: auto;
  flex: auto;
}

.weui-item__title {
  font-size: 42rpx;
}

.weui-item__desc {
  font-size: 28rpx;
}

.weui-item__desc1 {
  width: 320rpx;
  font-size: 28rpx;
}

.weui-media-box__thumb {
  height: 35px;
  width: 35px;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex
}

.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}